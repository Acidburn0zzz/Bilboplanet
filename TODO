NEW DATABASE :

Table USER:
	id
	login
	email
	password(sha1)
	fullname

Table OpenId:
	id
	user_id => user.id
	oid

Table websites:
	id
	user_id => user.id
	url

Table feeds:
	id
	user_id => user.id
	website_id => website.id
	url

Table posts:
	id
	user_id => user.id
	feed_id => feed.id
	title
	permalink
	stripped_content

Table tag:
	id
	name

Table post_tag:
	id
	post_id => post.id
	tag_id => tag.id

Table right:
	id
	name

Table user_rights:
	id
	user_id => user.id
	right_id => right.id

Table settings:
	id
	key
	value

